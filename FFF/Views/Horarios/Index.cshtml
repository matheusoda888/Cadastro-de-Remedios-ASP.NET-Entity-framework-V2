@model IEnumerable<Horario>

@{
    ViewData["Title"] = "Index";
}

<head>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.13.1/datatables.min.css" />
</head>
<style>
    h1 {
        background-color: aquamarine;
        text-align: center;
        border: 2px solid black;
    }

    body {
        background-color: deepskyblue
    }

    tbody {
        background-color: antiquewhite;
        border: 2px solid black;
    }

    a:visited {
        color: black
    }

    a:hover {
        color: black
    }

    a:active {
        color: black
    }

    a:link {
        color: black
    }

    p {
        text-align: center;
        font-size: 20px
    }

    thead {
        background-color: antiquewhite;
        border: 2px solid black;
    }
</style>
<h1>Horários</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="tabela1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tempo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horario1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPacienteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRemedioNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tempo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horario1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPacienteNavigation.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdRemedioNavigation.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<footer>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.13.1/datatables.min.js"></script>
</footer>
